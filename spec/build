#!/bin/bash -u
cd "$(dirname "$0")"

base=../src/
spec=$(ls -1 yml/*.yml | tr '\n' ',' | sed -e 's/,$//')

./gen.py "$spec" template/wrapper.mustache gleswrap.h > "$base/gl/gleswrap.c"
./gen.py "$spec" template/header.mustache gl.h > "$base/gl/gleswrap.h"
./gen.py "$spec" template/glxfuncs.mustache gl.h > "$base/glx/glxfuncs.inc"

